<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.zappcompany.customviews.EditTextWithClear
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_edit_text"
        android:text="Hello World!"
        android:inputType="textCapSentences"
        android:layout_gravity="start"
        android:textAlignment="viewStart"
        android:hint="@string/last_name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
         />
    <com.zappcompany.customviews.CustomRectView
        android:layout_width="wrap_content"
        android:id="@+id/custom_view"
        android:layout_height="250dp"
        app:square_color = "@color/squareColor"
        app:square_size = "80dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/my_edit_text"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_view"
        android:layout_centerInParent="true"
        android:text="@string/change_color"/>

</RelativeLayout>